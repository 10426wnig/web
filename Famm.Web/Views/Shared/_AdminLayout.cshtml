<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Famm Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/css/admin.css")" rel="stylesheet" />
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="admin-sidebar" id="adminSidebar">
        <div class="sidebar-brand">
            <span>FAMM ADMIN</span>
            <button class="btn-toggle-sidebar bg-transparent border-0 text-white" id="toggleSidebar">
                <i class="bi bi-list fs-4"></i>
            </button>
        </div>
        <div class="sidebar-menu">
            <a href="@Url.Action("Index", "Admin")" class="sidebar-menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                <i class="bi bi-speedometer2"></i>
                <span class="sidebar-menu-text">Панель управления</span>
            </a>
            <a href="@Url.Action("Products", "Admin")" class="sidebar-menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Products" ? "active" : "")">
                <i class="bi bi-box-seam"></i>
                <span class="sidebar-menu-text">Товары</span>
            </a>
            <a href="@Url.Action("Categories", "Admin")" class="sidebar-menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Categories" ? "active" : "")">
                <i class="bi bi-tags"></i>
                <span class="sidebar-menu-text">Категории</span>
            </a>
            <a href="@Url.Action("Orders", "Admin")" class="sidebar-menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Orders" ? "active" : "")">
                <i class="bi bi-cart3"></i>
                <span class="sidebar-menu-text">Заказы</span>
            </a>
            <a href="@Url.Action("Users", "Admin")" class="sidebar-menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Users" ? "active" : "")">
                <i class="bi bi-people"></i>
                <span class="sidebar-menu-text">Пользователи</span>
            </a>
            <div class="border-top my-3 border-secondary opacity-25"></div>
            <a href="@Url.Action("Index", "Home")" class="sidebar-menu-item">
                <i class="bi bi-shop"></i>
                <span class="sidebar-menu-text">Вернуться в магазин</span>
            </a>
            <a href="@Url.Action("Logout", "AuthFlow")" class="sidebar-menu-item">
                <i class="bi bi-box-arrow-right"></i>
                <span class="sidebar-menu-text">Выход</span>
            </a>
        </div>
    </div>

    <div class="admin-content" id="adminContent">
        <div class="admin-header">
            <h1 class="page-title">@ViewBag.Title</h1>
            <div class="d-flex align-items-center gap-3">
                <span>@User.Identity.Name</span>
                <a href="@Url.Action("Logout", "AuthFlow")" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-box-arrow-right me-1"></i> Выход
                </a>
            </div>
        </div>

        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            const sidebar = document.getElementById('adminSidebar');
            const content = document.getElementById('adminContent');
            
            $('#toggleSidebar').click(function() {
                sidebar.classList.toggle('collapsed');
                content.classList.toggle('expanded');
            });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html> 